<Window x:Class="Mwall.OptionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mwall"
        mc:Ignorable="d"
        Title="OptionForm" Height="300" Width="482.967">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Column Style" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="102" Width="158">
            <StackPanel>
            <RadioButton x:Name="radioButtonStraight" Content="Straight" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="radioButtonComet" Content="Comet" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
